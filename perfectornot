import java.util.*;
public class perfectornot
{
public static void main(String[] args)
{
Scanner in=new Scanner(System.in);
System.out.println("Enter the number you want to check=");
int a=in.nextInt();
int sum=0;
for(int i=1;i<a;i++)
{
if(a%i==0)
{
sum+=i;
}
}
if(sum==a)
{
System.out.println("Given number is a perfect number");
}
else if(sum<a)
{
System.out.println("Given number is a deficient number");
}
else
{
System.out.println("Given number is an abundant number");
}
}
}
